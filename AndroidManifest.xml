<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prince.app.ccm"
    android:versionCode="3"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
   <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".tools.Tool"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeBase" >

        <!-- Launch Activity -->
        <activity
            android:name=".Activity_Welcome"
            android:icon="@drawable/launcher"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/Main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Schedule Activity -->
        <activity
            android:name=".Activity_Turnos"
            android:icon="@drawable/launcher"
            android:label="@string/app_name"
            android:theme="@style/AppThemeBase.ScheduleTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>

        <!-- LogIn Activity -->
        <activity
            android:name=".Activity_Log"
            android:label="@string/title_activity_log"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppThemeBase"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>

        <!-- Settings activity -->
        <activity
            android:name=".SettingsActivity"
            android:icon="@drawable/launcher"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppThemeBase.settingsTheme" />
        
        <activity
            android:name=".Activity_Manuals"
            android:theme="@style/AppThemeBase.ScheduleTheme" 
            android:label="@string/title_activity_activity__help" >
        </activity>
        
        <activity
            android:name=".Activity_Contacts"
            android:theme="@style/AppThemeBase.ScheduleTheme"
            android:label="@string/title_activity_activity__help" >
        </activity>
    </application>

</manifest>
