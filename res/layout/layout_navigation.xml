<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/navigation_layout_turnos"
   	android:layout_width="match_parent"
   	android:layout_gravity="start"
   	android:background="@color/loading_color_2"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/image_drawer_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_photo_height"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/drawer_photo" />

  		<ListView
      		android:id="@+id/list_drawer_main"
      		android:layout_width="match_parent"
      		android:layout_height="match_parent"
      		android:choiceMode="singleChoice"
      		android:layout_marginTop="8dp"
      		android:divider="@android:color/transparent"
      		android:dividerHeight="0dp"
      		tools:context=".Fragment_NavigationDrawer" 
      		android:drawSelectorOnTop="true"/>
    			
</LinearLayout>
